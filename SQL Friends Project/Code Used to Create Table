drop TABLE friendsinfo

--Creating Initial Information Table

create table friendsinfo(
    id INT NOT NULL AUTO_INCREMENT,
    first_name VARCHAR(255),
    last_name VARCHAR(255),
    EMAIL_ADDRESS VARCHAR(255),
    BIRTHDAY VARCHAR(255),
    PRIMARY KEY(ID)
);

