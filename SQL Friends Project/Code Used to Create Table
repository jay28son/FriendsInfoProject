--Creating Address Information 

drop table address_info

create table address_info(
    first_name VARCHAR(255),
    STREET VARCHAR(255),
    CITY VARCHAR(255),
    STATES VARCHAR(255),
    ZIPCODE VARCHAR(255)
    );

